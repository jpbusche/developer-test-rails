	<h1>Edite seu cadastro</h1>

	<%= form_for(@user) do |f| %>

	  <div class="form-group">
	    <%= f.label :username, "Nome de UsuÃ¡rio" %><br>
	    <%= f.text_field :username %>
	  </div>
